<!DOCTYPE html>
<html lang="{{request.locale_name}}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">
		<link rel="icon" href="{{request.static_url('pymarket:static/img/favicon.ico')}}">

		<title>PyMarket - {% block page_title %}{% endblock %}</title>

		<!-- Bootstrap core CSS -->
		<link href="{{request.static_url('pymarket:static/css/bootstrap.min.css')}}" rel="stylesheet">

		<!-- Custom styles -->
		<link href="{{request.static_url('pymarket:static/css/custom.css')}}" rel="stylesheet">
		{% block page_css %}
		{% endblock %}

		<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>

	<body>
		{% include 'templates/base/nav_main.jinja2' %}

		<div class="container-fluid">      
			<div class="row">
				<div class="col-sm-12">
					{% include 'templates/base/nav_sub.jinja2' %}
				</div>
			</div>
			<div class="content">
				<div class="col-sm-12">
					<div class="row">
						<div class="col-sm-6 col-sm-offset-3">
							{% if messages %}
								<div class="alert alert-warning alert-dismissable">
									<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
									{% for message in messages %}
										<p>{{message}}</p>
									{% endfor %}
								</div>
							{% endif %}
						</div>
					</div>
					{% block page_content %}
					{% endblock %}
				</div>
			</div>
		</div>

		<!-- Bootstrap core JavaScript
		================================================== -->
		<!-- Placed at the end of the document so the pages load faster -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script src="{{request.static_url('pymarket:static/js/bootstrap.min.js')}}"></script>

		<!-- Custom scripts -->
		{% block page_js %}
		{% endblock %}
	</body>
</html>
