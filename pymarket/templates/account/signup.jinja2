{% extends 'templates/base/site.jinja2' %}

{% block page_title %}
Signup
{% endblock %}

{% block page_css %}
<link href="{{request.static_url('pymarket:static/css/signup.css')}}" rel="stylesheet">
{% endblock %}

{% block page_content %}

	<form class="form-signup" role="form" action="" method="post">
		{{ form.first_name.label }}
		<input type="text" name="first_name" class="form-control" value="{{ form.first_name.data or '' }}" required autofocus>
		{% if form.first_name.errors %}
			<ul class="errors">{% for error in form.first_name.errors %}<li>{{ error }}</li>{% endfor %}</ul>
		{% endif %}

		{{ form.last_name.label }}
		<input type="text" name="last_name" class="form-control" value="{{ form.last_name.data or '' }}" required>
		{% if form.last_name.errors %}
			<ul class="errors">{% for error in form.last_name.errors %}<li>{{ error }}</li>{% endfor %}</ul>
		{% endif %}

		{{ form.email.label }}
		<input type="email" name="email" class="form-control" value="{{ form.email.data or '' }}" required>
		{% if form.email.errors %}
			<ul class="errors">{% for error in form.email.errors %}<li>{{ error }}</li>{% endfor %}</ul>
		{% endif %}

		{{ form.password.label }}
		<input type="password" name="password" class="form-control" value="{{ form.password.data or '' }}" required>
		{% if form.password.errors %}
			<ul class="errors">{% for error in form.password.errors %}<li>{{ error }}</li>{% endfor %}</ul>
		{% endif %}

		{{ form.password_conf.label }}
		<input type="password" name="password_conf" class="form-control" value="{{ form.password_conf.data or '' }}" required>
		{% if form.password_conf.errors %}
			<ul class="errors">{% for error in form.password_conf.errors %}<li>{{ error }}</li>{% endfor %}</ul>
		{% endif %}
		
		<br>
		<button class="btn btn-lg btn-success btn-block" type="submit">
			{% if is_update %}
				Update
			{% else %}
				Register
			{% endif %}
		</button>
		<br>
		{% if is_update %}
			<p style="text-align: center;">or <a href="{{request.route_url('home')}}">Back to home</a></p>
		{% else %}
			<p style="text-align: center;">or <a href="{{request.route_url('site')}}">Back to site</a></p>
		{% endif %}
	</form>

{% endblock %}

{% block page_js %}
{% endblock %}